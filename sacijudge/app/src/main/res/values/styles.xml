<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextHeading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_heading</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="TextStandard">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/text_standart_size</item>
    </style>
    <style name="ratingInputText">
        <item name="android:width">70dp</item>
        <item name="android:height">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">40dp</item>
        <item name="android:background">@drawable/input_rating_btn_round_corner</item>
    </style>
    <style name="TextSecondary">
        <item name="android:textSize">@dimen/text_secondary_size</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

</resources>
