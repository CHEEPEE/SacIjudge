<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:paddingBottom="24dp"
    android:background="@drawable/round_corner_white">

    <TextView
        android:id="@+id/criteriaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Criteria Name"
        android:theme="@style/TextHeading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="On the scale of 0-10 how would you rate the contestant?"
        android:textAlignment="center"
        android:textColor="@color/lighterGray"
        android:textSize="12sp"
        android:theme="@style/TextStandard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/criteriaName" />

    <TextView
        android:id="@+id/inputRating"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:maxEms="2"
        android:maxLength="2"
        android:textAlignment="center"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView

        android:id="@+id/two"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="2"
        android:theme="@style/ratingInputText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputRating" />

    <TextView

        android:id="@+id/five"
        android:layout_width="60dp"

        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="5"
        android:theme="@style/ratingInputText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/two" />

    <TextView

        android:id="@+id/eight"
        android:layout_width="60dp"

        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="8"
        android:theme="@style/ratingInputText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/five" />

    <TextView

        android:id="@+id/ten"
        android:layout_width="60dp"

        android:layout_height="60dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="8dp"
        android:text="10"
        android:theme="@style/ratingInputText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eight" />

    <TextView

        android:id="@+id/zero"
        android:layout_width="60dp"
        android:visibility="visible"
        android:layout_height="60dp"
        android:text="0"
        android:theme="@style/ratingInputText"
        app:layout_constraintEnd_toStartOf="@+id/ten"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ten" />

    <TextView

        android:id="@+id/seven"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="7"
        android:theme="@style/ratingInputText"
        app:layout_constraintEnd_toStartOf="@+id/eight"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/eight" />

    <TextView

        android:id="@+id/nine"
        android:layout_width="60dp"

        android:layout_height="60dp"
        android:text="9"
        android:theme="@style/ratingInputText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toEndOf="@+id/eight"
        app:layout_constraintTop_toTopOf="@+id/eight" />

    <TextView

        android:id="@+id/six"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="6"
        android:theme="@style/ratingInputText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toEndOf="@+id/five"
        app:layout_constraintTop_toTopOf="@+id/five" />

    <TextView

        android:id="@+id/four"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="4"
        android:theme="@style/ratingInputText"
        app:layout_constraintEnd_toStartOf="@+id/two"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/five" />

    <TextView

        android:id="@+id/one"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="1"
        android:theme="@style/ratingInputText"
        app:layout_constraintEnd_toStartOf="@+id/two"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/two" />

    <TextView

        android:id="@+id/three"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="3"
        android:theme="@style/ratingInputText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toEndOf="@+id/two"
        app:layout_constraintTop_toTopOf="@+id/two" />

    <ImageView
        android:id="@+id/done"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:foregroundGravity="center"
        android:textColor="@color/textLightDark"
        android:tint="@color/lighterGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ten"
        app:layout_constraintTop_toTopOf="@+id/ten"
        app:srcCompat="@drawable/ic_check_circle_black_24dp" />


</android.support.constraint.ConstraintLayout>